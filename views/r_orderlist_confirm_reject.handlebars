{{>header}}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/retailer/r_home">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Confirmation List</li>
    </ol>
</nav>
<div class="row m-auto">
    <div class="col-lg-12 col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-5"><i class="fas fa-pills"></i>Confirm/Reject Order List</h1>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Company</th>
                        <th scope="col">Details</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>

                        <th scope="col">Order_Approval</th>
                       

                    </tr>
                </thead>
                <tbody>
                    {{#each order}}
                    <tr>
                         <td>{{id}}</td>
                        <td>{{product_name}}</td>
                        <td>{{product_company}}</td>
                        <td>{{product_details}}</td>
                        <td>{{product_price}}</td>
                        <td>{{quantity}}</td>
                        <td>{{d_confirm}}</td>
                       

                    </tr>
                    {{/each}}

                </tbody>

            </table>
        </div>
    </div>
</div>