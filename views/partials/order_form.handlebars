<div class="form-group">
    <label for="product_name">Product Name</label>
    <input type="text" name="product_name" class="form-control" value="{{product_name}}">
</div>
<div class="form-group">
    <label for="quantity">Quantity</label>
    <input type="text" name="quantity" class="form-control" value="{{quantity}}">
</div>
<div class="form-group">
    <label for="phone_number">Phone No.</label>
    <input type="text" name="phone_number" class="form-control" value="{{phone_number}}">
</div>
<div class="form-group">
    <label for="address">Address</label>
    <textarea name="address" class="form-control" style="height: 120px;">{{address}}</textarea>

</div>

<button class="btn btn-primary btn-block" type="submit">Submit</button>